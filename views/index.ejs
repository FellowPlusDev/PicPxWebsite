<!DOCTYPE html>
<html ng-app="DeepPicApp">
  <head>
    <meta content="text/html;charset=UTF-8" http-equiv="content-type" />
    <meta content="width=device-width, initial-scale=1" name="viewport" />

    <title>DeepPic</title>
    
    <link href="/bower_components/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="/stylesheets/application.css" rel="stylesheet">

    <script src="/bower_components/underscore/underscore-min.js"></script>

    <script src="/bower_components/jquery/dist/jquery.min.js"></script>
    <script src="/bower_components/zeroclipboard/dist/ZeroClipboard.min.js"></script>

    <script src="/bower_components/angular/angular.min.js"></script>
    <script src="/bower_components/angular-file-upload/angular-file-upload.min.js"></script>
    <script src="/bower_components/ng-clip/dest/ng-clip.min.js"></script>

    <script src="/javascripts/application.js"></script>
    <script src="/javascripts/angular-file-upload-thumb.js"></script>
  </head>
  <body ng-controller="UploadCtrl" nv-file-over="" over-class="highlight" uploader="uploader">
    <%= include _header %>

    <div class="viewport">
      <div class="sidebar">
        <div class="toolbar">
          <button class="btn btn-xs btn-default"
                  ng-click="selectAll()">全选</button>
          <button class="btn btn-xs btn-default"
                  ng-click="selectNone()">取消</button>
          <button class="btn btn-xs btn-default"
                  id="btn-copy"
                  clip-copy="output()"
                  ng-click="selectOutput()">复制外链</button>
          <div class="pull-right">
            <button class="btn btn-xs btn-default"
                    ng-click="removeSelection()">移除所选</button>
          </div>
        </div>

        <textarea class="content" wrap="off" readonly="readonly">{{output()}}</textarea>
      </div><!-- .sidebar -->

      <div class="main">
        <div class="uploader-wrapper" nv-file-drop="" uploader="uploader">
          <div class="uploader">
            <h5>拖动图片到页面上或者</h5>
            <button class="btn btn-sm btn-primary" ng-click="clickUpload()">上传图片</button>
            <input type="file" nv-file-select uploader="uploader" id="file" multiple />
          </div>
        </div><!-- .uploader-wrapper -->

        <div class="content">
          <div class="row-fluid">
            <div class="col-lg-3 col-md-4 col-xs-6 thumb {{item.isSelected ? 'selected' : ''}} {{item.isSuccess ? 'success' : ''}}" ng-repeat="item in uploader.queue">
              <a href="javascript:;" class="action action-close" title="移除"
                 ng-click="removeItem(item)">
                <span class="glyphicon glyphicon-remove"></span>
              </a>

              <a href="javascript:;" class="thumbnail" ng-click="toggleSelect(item)">
                <div ng-show="uploader.isHTML5" ng-thumb="{ file: item._file, height: 150 }"></div>

                <a href="javascript:;" class="btn btn-success btn-sm btn-block btn-copy-link" title="复制链接"
                   clip-copy="getItemUrl(item)"
                   clip-click="showCopySuccess(item)"
                   ng-show="item.isSuccess">
                  <span class="glyphicon"
                        ng-class="{ 'glyphicon-ok-sign': item.isJustCopied, 'glyphicon-file': !item.isJustCopied }"></span>
                  {{ item.isJustCopied ? '已复制到剪贴板' : '复制链接' }}
                </a>

                <div class="thumb-name progress" ng-hide="item.isSuccess">
                  <div class="progress-bar" ng-style="{ 'width': item.progress + '%' }">
                    <label><span>{{item.file.name}}</span></label>
                  </div>
                </div>
              </a>
            </div>
          </div>
        </div><!-- .content -->
      </div><!-- .main -->
    </div><!-- .viewport -->
  </body>
</html>
