<!DOCTYPE html>
<html ng-app="DeepPicApp">
  <head>
    <meta content="text/html;charset=UTF-8" http-equiv="content-type" />
    <meta content="width=device-width, initial-scale=1" name="viewport" />

    <title>DeepPic</title>
    
    <link href="/bower_components/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="/stylesheets/application.css" rel="stylesheet">

    <script src="/bower_components/underscore/underscore-min.js"></script>

    <script src="/bower_components/jquery/dist/jquery.min.js"></script>
    <script src="/bower_components/zeroclipboard/dist/ZeroClipboard.min.js"></script>

    <script src="/bower_components/angular/angular.min.js"></script>
    <script src="/bower_components/angular-file-upload/angular-file-upload.min.js"></script>
    <script src="/bower_components/ng-clip/dest/ng-clip.min.js"></script>

    <script src="/javascripts/application.js"></script>
    <script src="/javascripts/angular-file-upload-thumb.js"></script>
  </head>
  <body ng-controller="UploadCtrl" nv-file-over="" over-class="highlight" uploader="uploader">
    <%= include _header %>

    <div class="viewport">
      <div class="sidebar">
        <div class="toolbar">
          <button class="btn btn-xs btn-default"
                  ng-click="selectAll()">全选</button>
          <button class="btn btn-xs btn-default"
                  ng-click="selectNone()">取消</button>
          <button class="btn btn-xs btn-default"
                  clip-copy="output()"
                  ng-click="selectOutput()">复制</button>
        </div>

        <textarea class="content" wrap="off" readonly="readonly">{{output()}}</textarea>
      </div><!-- .sidebar -->

      <div class="main">
        <div class="uploader-wrapper" nv-file-drop="" uploader="uploader">
          <div class="uploader">
            <h5>拖动图片到页面上或者</h5>
            <button class="btn btn-sm btn-primary" ng-click="clickUpload()">上传图片</button>
            <input type="file" nv-file-select uploader="uploader" id="file" multiple />
          </div>
        </div><!-- .uploader-wrapper -->

        <div class="content">
          <div class="row-fluid">
            <div class="col-lg-3 col-md-4 col-xs-6 thumb {{item.isSelected ? 'selected' : ''}} {{item.isSuccess ? 'success' : ''}}"
                 ng-repeat="item in uploader.queue"
                 ng-click="toggleSelect(item)">
              <a href="###" class="thumbnail">
                <div ng-show="uploader.isHTML5" ng-thumb="{ file: item._file, height: 150 }"></div>
                <div class="thumb-name">{{item.file.name}}</div>
                <img da-src="{{item.remoteUrl}}" />
              </a>
            </div>
          </div>
        </div><!-- .content -->
      </div><!-- .main -->
    </div><!-- .viewport -->
  </body>
</html>
